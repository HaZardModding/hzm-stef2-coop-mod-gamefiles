void hologramsFlicker()
{
	$hologramDoor.loopsound("sound/ships/drull/drull_hologram.wav",1,256);
	while(1)
	{
		$hologramDoor.hide();
		$hologramBush.hide();
		wait(0.15);
		$hologramBush.show();
		$hologramDoor.show();
		wait(0.15);
