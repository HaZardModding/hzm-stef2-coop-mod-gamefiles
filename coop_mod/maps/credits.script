void main()
{
	//--fade the world out
	cam_fadeout( .1, 0, 0, 0, 1, 0 );
	letterbox( .1 );
	cinematic();

	//--- set the soundtrack
	soundtrack( "music/credits.mus" );

	setupWorld();
	
	waitForPlayer();
	freezeplayer();
	wait( 1 );
	
	thread cinematicMain();
}

//---------------------
// setupWorld
// setup world objects
//---------------------
void setupWorld()
{
	//--- set the sky box
	$sky.rendereffects( "+skyorigin" );

	//--- spawn cameras
	spawn( "Camera", "targetname", "cam1");
	spawn( "Camera", "targetname", "cam2");

	//--- hide sky camera
	$sky.hide();
	$sky.notsolid();

	//--- rotate the sky dome
	$skydome.rotateX( 0.2 );
	$skydome.rotateY( 0.7 );
}

