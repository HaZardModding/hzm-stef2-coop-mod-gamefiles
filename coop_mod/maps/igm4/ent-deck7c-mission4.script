void alisonJamesonTalkIGM4()
{
	$triggerHazardLoungeTalk.thread( "" );
	
	$alison.setFloatVar( "pauseRandomAnimate", 1 );
	$jameson.setFloatVar( "pauseRandomAnimate", 1 );
	wait( .25 );
	$alison.anim( "idle" );
	$jameson.anim( "idle" );
	
	$alison.playdialog("localization/sound/dialog/ent_m4/alison_nocraz.mp3", 1, 128, 0); //I was on the holodeck observing the Andorian flora in their natural habitat.
	waitForDialog( $alison );
	$jameson.playdialog("localization/sound/dialog/ent_m4/counselor_surethey.mp3", 1, 128, 0); //How did you sustain this injury with the holodeck safety protocols in place?
	waitForDialog( $jameson );
	$alison.playdialog("localization/sound/dialog/ent_m4/alison_dontpa.mp3", 1, 128, 0); //I overrode the holodeck safety protocols, by running it in diagnostics mode.
	waitForDialog( $alison );
	$jameson.playdialog("localization/sound/dialog/ent_m4/counselor_proof1.mp3", 1, 128, 0); //Why would you do a thing like that?  Isn't Andorian flora carnivorous?
	waitForDialog( $jameson );
	$alison.playdialog("localization/sound/dialog/ent_m4/alison_waita.mp3", 1, 128, 0); //Well yes, but...
	waitForDialog( $alison );
	$jameson.playdialog("localization/sound/dialog/ent_m4/counselor_imsure.mp3", 1, 128, 0); //Who gave you authorization to disable those safety protocols?
	waitForDialog( $jameson );
	$alison.playdialog("localization/sound/dialog/ent_m4/alison_dontb.mp3", 1, 128, 0); //No one did... I didn't think it would turn out this way.
	waitForDialog( $alison );
	$jameson.playdialog("localization/sound/dialog/ent_m4/counselor_ibel.mp3", 1, 128, 0); //You realize you could have been eaten?  I'm rescheduling the rest of my appointments today as you clearly need my counseling.
	waitForDialog( $jameson );
	$alison.playdialog("localization/sound/dialog/ent_m4/alison_cantbel.mp3", 1, 128, 0); //...but what about my plants in the hydroponics bay?
	waitForDialog( $alison );
	$jameson.playdialog("localization/sound/dialog/ent_m4/counselor_nowwe.mp3", 1, 128, 0); //I'll have someone take over your assignment for the next few days.  I think you need some time to reflect on your actions.
	waitForDialog( $jameson );

	$alison.setFloatVar( "pauseRandomAnimate", 0 );
	$jameson.setFloatVar( "pauseRandomAnimate", 0 );
	
	thread alison_workIGM4();
	thread jameson_workIGM4();
}

