void entDeck7cIGM4Option1()
{
	// Warning this is ordered this way to prevent a bug where Munro goes to telsia's door
	// before being summoned. Thread is set before player has a chance to ring the door, other wise 
	// the not present thread could possibly reset the door to the wrong thread.
	cuecamera ( $cam5 );
	wait( .2 );
	$scriptmunro.playdialog("localization/sound/dialog/ent_m4/munro_helpful.mp3", 1, 10000, 0); //I don't see how that would be helpful.
	waitForDialog( $scriptmunro );
	
	cuecamera ( $cam6 );
	wait( .2 );
	$kleeya.playdialog("localization/sound/dialog/ent_m4/kleeya_finealon.mp3", 1, 10000, 0);
	waitForDialog( $kleeya );

	//--- fade out and set the level up
	cam_fadeout( .5, 0, 0, 0, 1, 0 );
	wait( .6 );
	
	// --- Setup
	
	if(doesEntityExist(ePlayerCinematic)){
		ePlayerCinematic.origin( $scriptmunro.getorigin() );
	}

	$gray.ai_on();
	$gray.show();
	$gray.solid();
	$gray.origin( '-10188 -160 0' );
	$gonzales.ai_on();
	$gonzales.show();
	$gonzales.solid();
	$gonzales.origin( '-9872 1312 0' );
	
	$scriptmunro.hide();
	$scriptmunro.notsolid();
	
	cueplayer();
	noncinematic();
	releaseplayer();
	clearletterbox( .05 );
	
	cam_fadein( .5, 0, 0, 0, 1, 0 ) ;

	//Objective stuff
	setfloatvar( "game.IGM4TalkWithKleeya", 2 );
	justLoadedDeckThreadIGM4();
	
	setfloatvar ("game.checkEntMission4RoomsVisited", 2 );
	
	//hzm coop mod chrissstrahl, set these because the server could be shoutdown between the missions
	setFloatVar("game.igmRoomsVisited",2);//set rooms visited
	//eof HZM
	
	$kleeya.resethead();
		
	thread kleeya_workIGM4();
	
	wait( 5 );
	
	$telsia.playdialog("localization/sound/dialog/ent_m4/telsia_seeyou2.mp3", 1, 10000, 1 ); //Telsia to Munro. I'd like to see you today. Stop by my quarters.
	waitForDialog( $telsia );
	
	setfloatvar( "game.IGM4GoToTelsia", 1 );
	justLoadedDeckThreadIGM4();
	
	
	///hzm coop mod Chrissstrahl, set the objective
	globalCoop_objectives_set("$$IGM4TalkWithKleeya$$","complete",1,0);
	globalCoop_objectives_set("$$IGM4GoToTelsia$$","incomplete",2,1);
}

void entDeck7cIGM4Option2()
