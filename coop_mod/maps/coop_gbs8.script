void collision_counter()
{
	//hzm coop mod chrissstrahl - add mission relevant hud to all players
	thread globalCoop_huds_manageAll("coopGbs_timeUntilCollision",1,1);
	
	
	//hzm coop mod chrissstrahl - create our own counter
	float fValue		= 100;//full time
	float fTime			= 60; //time in secounds
	float fSubstract;
	fSubstract = (fValue / fTime);
	
	entity ePlayer;
	float fPlayerIdInUse;
	
	for(fPlayerIdInUse=0;fPlayerIdInUse<coop_integer_maxPlayers;fPlayerIdInUse++){
		ePlayer = getentity("player"+fPlayerIdInUse);
		if(doesEntityExist(ePlayer)){
			ePlayer.setstat ( "generic" , fValue );
		}
	}
	
	while(fValue > 0)
	{
		fValue -= fSubstract;
		
		for(fPlayerIdInUse=0;fPlayerIdInUse<coop_integer_maxPlayers;fPlayerIdInUse++){
			ePlayer = getentity("player"+fPlayerIdInUse);
			if(doesEntityExist(ePlayer)){
				ePlayer.setstat ( "generic" , (fValue)  );
			}
		}
		wait(1);
	}
	
	if(fValue <= 0){
		cam_fadeout( 3, 1, 1, 1, 1, 0 );
		wait( 4 );
		//hzm coop mod chrissstrahl - fail mission
		globalCoop_mission_fail();
	}
}

