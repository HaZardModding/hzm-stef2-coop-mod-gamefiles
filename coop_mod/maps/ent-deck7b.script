	$triggerSuttleBayLift1.bind( $suttleBayLift1 );
	$triggerSuttleBayLift2.bind( $suttleBayLift2 );
	$triggerSuttleBayLift3.bind( $suttleBayLift3 );
	$triggerSuttleBayLift4.bind( $suttleBayLift4 );
	
