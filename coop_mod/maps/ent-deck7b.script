	$shuttleBayDoorOriginRight.rotateYdown( 22 );
	waitfor( $shuttleBayDoorOriginRight );
	
	$shuttleBayDoorRight.stoploopsound();
	$shuttleBayDoorRight.playsound( "sound/doors/airlock_close01.wav", 12 ,1 ,10000 );
	
	bayDoorRightIsOpen = 1;
}
