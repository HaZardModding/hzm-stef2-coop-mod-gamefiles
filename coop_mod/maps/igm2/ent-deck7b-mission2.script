void cinematicDepartureIGM2Skipthread()
{
	//--- kill the cinematicDepartureIGM2 thread
	skipthread( "Null" );
	killthread( "cinematicDepartureIGM2" );

	//--- call the ending of the cinematicDepartureIGM2
	thread cinematicDepartureIGM2End();
