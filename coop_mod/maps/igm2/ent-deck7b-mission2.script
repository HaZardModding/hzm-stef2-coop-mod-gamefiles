////////////////////////////////
void plasmaInverterGoIGM2()
{
	$shuttleBayObject.nouse();
	$shuttleBayObject.hide();
	$shuttleBayObject.notsolid();

	$shuttleBayObject.playsound( "sound/environment/machine/phaseinv_pickup.wav", 3, 1, 800 );

