		thread setupMission4Deck11();
	}
	if( missionEnterprise == 5 )
	{
		thread setupMission5Deck11();
	}
	if( missionEnterprise == 6 )
	{
		thread setupMission6Deck11();
	}
	if( missionEnterprise == 7 )
	{
		thread setupMission7Deck11();
	}
	if( missionEnterprise == 8 )
