	$domeBlack.show();
}

void fadeInMunroPlanets()
{
	$dome.angles( '45 45 180' );
	$dome.show();
	
	$sun.show();
	$moon.show();
	$earth.show();
	
	$domeBlack.hide();
}

void fadeOutMunroPlanets()
{
