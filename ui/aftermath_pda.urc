	font serpentinemedium-12
	clicksound sound/weapons/tricorder/tri_puzz_pad.wav
	hovercommand "globalwidgetcommand aftermathPda_tooltip title \"Show original Text\"\n"
	hoverexitcommand "globalwidgetcommand aftermathPda_tooltip title \"\"\n"
	stuffcommand "globalwidgetcommand aftermathPda_text font romulan-18;set ui_failureReason 1\n"
}
//--- translate button
resource Button
{
	cvarvisibility ui_failureReason 1
	name "aftermathPda_button_translate"
	rect 260 360 120 23
	fgcolor 0 0 0 1
	bgcolor 0.35 0.67 1.00 1
	borderstyle "3D_BORDER"
	title "Translate"
	font serpentinemedium-12
	clicksound sound/weapons/tricorder/tri_puzz_pad.wav
