//--- original button
resource Button
{
	cvarvisibility ui_failureReason 0
	name "aftermathPda_button_original"
	rect 260 360 120 23
	fgcolor 0 0 0 1
	bgcolor 0.35 0.67 1.00 1
	borderstyle "3D_BORDER"
